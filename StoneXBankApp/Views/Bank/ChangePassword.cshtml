@model StoneXBankApp.Models.ChangePasswordViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="container p-3 border">
    <form asp-controller="Bank" asp-action="ChangePassword" method="post">
        <div class="mb-3">
            <label asp-for="OldPassword">Old password</label>
            <input type="password" asp-for="OldPassword" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NewPassword">New password</label>
            <input type="password" asp-for="NewPassword" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NewPasswordRepeated">Reapet new password</label>
            <input type="password" asp-for="NewPasswordRepeated" />
            <span asp-validation-for="NewPasswordRepeated" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Ok</button>
    </form>
</div>