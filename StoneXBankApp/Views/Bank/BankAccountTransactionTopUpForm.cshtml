@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="container p-3 border">
    <form asp-controller="Bank" asp-action="BankAccountTransactionTopUpForm" method="post">
        <input asp-for="SenderBankAccountNumber"/>
        <div class="mb-3">
            <label asp-for="Amout">Amout</label>
            <input asp-for="Amout" />
            <span asp-validation-for="Amout" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Dalej</button>
    </form>
</div>