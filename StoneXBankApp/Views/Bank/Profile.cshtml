@model StoneXBankApp.Models.Profile
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
     Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="container p-3 border">

    <div class="mb-3">
        <label asp-for="Name">Name:</label>
        <div>@Model.Name</div>
    </div>
    <div class="mb-3">
        <label asp-for="Surename">Surename:</label>
        <div>@Model.Surename</div>
    </div>
    <div class="mb-3">
        <label asp-for="Login">Login:</label>
        <div>@Model.Login</div>
    </div>
    <div class="mb-3">
        <label asp-for="Password">Password:</label>
        <a asp-action="ChangePassword" class="btn btn-primary">ChangePassword</a>
    </div>
    <div class="mb-3">
        <label asp-for="Email">Email:</label>
        <div>@Model.Email</div>
         @*change email button*@
    </div>
    <div class="mb-3">
        <label asp-for="Pesel">Pesel:</label>
        <div>@Model.Pesel</div>
    </div>
    <div class="mb-3">
        <label asp-for="BirtDate">BirtDate:</label>
        <div>@Model.BirtDate.ToShortDateString()</div>
    </div>
    <a asp-controller="bank" asp-action="index" class="btn btn-primary">Ok</a>
</div>